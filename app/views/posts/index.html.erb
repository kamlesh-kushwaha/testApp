<%= image_tag "https://en.opensuse.org/images/4/49/Amarok-logo-small.png"%>
<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.published %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<h1>Total Published </h1> <%=@presenter.published_count%>
<br>
<ul>
  <%@presenter.authers.each do |auther| %>
    <li> <%=auther.name%></li>
  <%end%>
</ul>
<br>

<%= link_to 'New Post', new_post_path %>
